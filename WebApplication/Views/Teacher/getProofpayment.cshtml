@model IEnumerable<SeniorProject.ViewModels.Teacher.Proofpayment>

<table id="JsonTable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="text-align-left">ลำดับ</th>
            <th class="text-align-left">ชื่องาน</th>
            <th class="text-align-left">สถานะ</th>
            <th class="text-align-center">ตัวดำเนินการ</th>
        </tr>
    </thead>
    <tbody>
        @{
            int Rows = 1;
            foreach (var Get in Model.OrderBy(f => f.Id))
            {
                <tr>
                    <td class="text-align-center" width="20">@Rows.</td>
                    <td>@Get.Job_name  </td>
                    <td>@Get.status_name </td>
                    <td class="text-align-center">
                        <button class="btn btn-warning btn-xs edit" value="@Get.Id"><i class="fa fa-pencil"></i> เอกสาร</button>
                    </td>
                </tr>
                Rows++;
            }
        }
    </tbody>
</table>