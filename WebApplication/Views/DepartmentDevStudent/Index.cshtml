@{
    Layout = "~/Views/Shared/_Layout3.cshtml";
    ViewData["Title"] = "DashBoard";
}

<div id="content">
    <section id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12 margin-bottom-5">
            </article>
        </div>
    </section>
    <section id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <div class="jarviswidget" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-editbutton="false" data-widget-sortable="false">
                    <header><h2> <strong> จำนวนนักศึกษาเเต่ละคณะเเละหน่วยงานที่มาสมัครงาน</strong></h2></header>
                    <div>
                        <div class="jarviswidget-editbox"><input class="form-control" type="text"></div>
                        <div class="widget-body">
                            <div class="row">
                                <div class="col-lg-12 text-align-center">
                                    <h1 style="font-size:29rem">
                                        <canvas id="barChart"></canvas>
                                    </h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </article>
            <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <div class="jarviswidget" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-editbutton="false" data-widget-sortable="false">
                    <header><h2> <strong> จำนวนนักศึกษา/นักศึกษาที่สมัครงาน</strong></h2></header>
                    <div>
                        <div class="jarviswidget-editbox"><input class="form-control" type="text"></div>
                        <div class="widget-body">
                            <div class="row">
                                <div class="col-lg-12 text-align-center">
                                    <h1 style="font-size:29rem">
                                        <canvas id="myChart2"></canvas>
                                    </h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

@section Scripts{
    <script src="~/js/plugin/easy-pie-chart/jquery.easy-pie-chart.min.js"></script>
    <script src="~/js/plugin/chartjs/chart.min.js"></script>
    <script type="text/javascript">
        var data = {
            labels: ["นักศึกษาทั้งหมด", "นักศึกษาที่สมัครงานทั้งหมด"],
            datasets: [
                {
                    data: [@ViewBag.Student, @ViewBag.Register],
                    backgroundColor: ["#F7464A", "#46BFBD"],
                    hoverBackgroundColor: ["#FF5A5E", "#5AD3D1"]
                }
            ]
        };

        var ctx = document.getElementById("myChart2").getContext("2d");
        var myPieChart = new Chart(ctx, {
            type: 'pie',
            data: data
        });
    </script>
    <script type="text/javascript">
        var ctx = document.getElementById("barChart").getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ["หน่วยงานของมหาลัย", "ศิลปศาสตร์", "ครุศาสตร์อุตสาหกรรม", "เทคโนโลยีการเกษตร", "วิศวกรรม","บริหารธุรกิจ","เทคโนโลยีคหกรรม","ศิลปกรรม",
                            "สื่อสารมวลชน","วิทยาศาตร์","สถาปัตย์","เเพทย์บูรณาการ","พยาบาล"],
                datasets: [{
                    label: 'จำนวนนักศึกษาที่มาสมัครงาน',
                    data: [@ViewBag.Office, @ViewBag.Lib, @ViewBag.Tech, @ViewBag.Agr, @ViewBag.Engineer,@ViewBag.Bus,@ViewBag.Het,@ViewBag.Fa,
                            @ViewBag.Mass,@ViewBag.Sci,@ViewBag.Arch,@ViewBag.Im,@ViewBag.Nurse],
                    backgroundColor: [
                        'rgba(26, 35, 126, 0.2)',
                        'rgba(255, 255, 00, 0.2)',
                        'rgba(142, 68, 173, 0.2)',
                        'rgba(228, 39, 140, 0.2)',
                        'rgba(128, 00, 00, 0.2)',
                        'rgba(50, 197, 244, 0.2)',
                        'rgba(255, 192, 203, 0.2)',
                        'rgba(255, 87, 51, 0.2)',
                        'rgba(128, 139, 150, 0.2)',
                        'rgba(133, 87, 35, 0.2)',
                        'rgba(199, 136, 39, 0.2)',
                        'rgba(252, 3, 3, 0.2)',
                        'rgba(0, 0, 0, 0.2)'
                    ],
                    borderColor: [
                        'rgba(26, 35, 126, 1)',
                        'rgba(255, 255, 00, 1)',
                        'rgba(142, 68, 173, 1)',
                        'rgba(228, 39, 140, 1)',
                        'rgba(128, 00, 00, 1)',
                        'rgba(50, 197, 244, 1)',
                        'rgba(255, 192, 203, 1)',
                        'rgba(255, 87, 51, 1)',
                        'rgba(128, 139, 150, 1)',
                        'rgba(133, 87, 35, 1)',
                        'rgba(199, 136, 39, 1)',
                        'rgba(252, 3, 3, 1)',
                        'rgba(0, 0, 0, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    </script>
}

