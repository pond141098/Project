@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewData["Title"] = "";
}

<div id="content">
    <section id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12 margin-bottom-5">
            </article>
        </div>
    </section>
    <section id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <div class="jarviswidget" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-editbutton="false" data-widget-sortable="false">
                    <header><h2> <strong> จำนวนนักศึกษาที่สมัครงานทั้งหมดในคณะ</strong></h2></header>
                    <div>
                        <div class="jarviswidget-editbox"><input class="form-control" type="text"></div>
                        <div class="widget-body">
                            <div class="row">
                                <div class="col-lg-12 text-align-center">
                                    <h1 style="font-size:11.2rem">
                                        <canvas id="myChart"></canvas>
                                    </h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

@section Scripts{
    <script src="~/js/plugin/easy-pie-chart/jquery.easy-pie-chart.min.js"></script>
    <script src="~/js/plugin/chartjs/chart.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var dataPoints = @Html.Raw(ViewBag.DataPoints);

            var ctx = document.getElementById('myChart').getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: dataPoints.map(x => x.label),
                    datasets: [{
                        data: dataPoints.map(x => x.value),
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                }
            });
        })

    </script>
}

