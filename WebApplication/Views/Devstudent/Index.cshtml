                    <div>
                        <div class="jarviswidget-editbox"><input class="form-control" type="text"></div>
                        <div class="widget-body">
                            <div class="row">
                                <div class="col-lg-12 text-align-center">
                                    <h1 style="font-size:11.2rem">
                                        <canvas id="myChart"></canvas>
                                    </h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </article>
            <article class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <div class="jarviswidget" data-widget-colorbutton="false" data-widget-fullscreenbutton="false" data-widget-editbutton="false" data-widget-sortable="false">
                    <header><h2> <strong> จำนวนนักศึกษาที่สมัครงานทั้งหมดในคณะ</strong></h2></header>
                    <div>
                        <div class="jarviswidget-editbox"><input class="form-control" type="text"></div>
                        <div class="widget-body">
                            <div class="row">
                                <div class="col-lg-12 text-align-center">
                                    <h1 style="font-size:29rem">
                                        9
                                    </h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

@section Scripts{
    <script src="~/js/plugin/easy-pie-chart/jquery.easy-pie-chart.min.js"></script>
    <script src="~/js/plugin/chartjs/chart.min.js"></script>
    <script type="text/javascript">
        var data = {
            labels: @Html.Raw(Json.Serialize(ViewBag.labels)),
            datasets: [{
                data: @Html.Raw(Json.Serialize(ViewBag.values)),
                backgroundColor: [
                    'rgba(255, 99, 132, 0.5)',
                    'rgba(54, 162, 235, 0.5)',
                    'rgba(255, 206, 86, 0.5)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)'
                ],
                borderWidth: 1
            }]
        };

        var options = {
            responsive: true
        };

        var myPieChart = new Chart(document.getElementById('myChart'), {
            type: 'pie',
            data: data,
            options: options
        });
    </script>
}

