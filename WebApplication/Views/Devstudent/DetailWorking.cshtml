@model IEnumerable<SeniorProject.ViewModels.Devstudent.DetailWorking>

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewData["Title"] = "รายละเอียดการทำงาน";
}

<div id="ribbon">
    <span class="ribbon-button-alignment">
        <span id="refresh" class="btn btn-ribbon">
            <i class="fa fa-refresh"></i>
        </span>
    </span>
    <ol class="breadcrumb">
        <li><a href="/Devstudent/ListStudentWorking">รายการทำงานนักศึกษา</a></li>
        <li>@ViewData["Title"]</li>
    </ol>
</div>
<div id="content">
    <section id="widget-grid">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget" id="wid-id-0" data-widget-togglebutton="false" data-widget-editbutton="false" data-widget-fullscreenbutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false">
                    <header role="heading">
                        <h2 class="font-md">รายการปฎิบัติงาน</h2>
                        <span class="jarviswidget-loader" style="display: none;"><i class="fa fa-refresh fa-spin"></i></span>
                    </header>
                    <div role="contentinfo" style="display: block;">
                        <div class="jarviswidget-editbox"></div>
                        <div class="widget-body">
                            <div class="table-responsive">
                                <table id="JsonTable" class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th class="text-align-left">ลำดับ</th>
                                            <th class="text-align-left">วันที่</th>
                                            <th class="text-align-left">เวลาเข้างาน</th>
                                            <th class="text-align-left">หลักฐานตอนเริ่มทำงาน</th>
                                            <th class="text-align-left">สถานที่เข้างาน</th>
                                            <th class="text-align-left">เวลาออกงาน</th>
                                            <th class="text-align-left">หลักฐานตอนเลิกทำงาน</th>
                                            <th class="text-align-left">สถานที่ออกงาน</th>
                                            <th class="text-align-left">สถานะ</th>
                                            <th class="text-align-left">ตัวดำเนินการ</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int Rows = 1;
                                            foreach (var Get in Model.OrderBy(f => f.date))
                                            {
                                                if (Get.file_out == null)
                                                {
                                                    <tr>
                                                        <td class="text-align-center" width="50">@Rows.</td>
                                                        <td>@Get.date  </td>
                                                        <td>@Get.check_in  </td>
                                                        <td>
                                                            <button class="btn">@Html.ActionLink("Download","Download2", new { Name = Get.file_in })</button>
                                                        </td>
                                                        <td>
                                                            <a href="https://www.google.com/maps?q=@Get.laitude_in,@Get.longitude_in" target="_blank">Show location on map</a>
                                                        </td>
                                                        <td>@Get.check_out  </td>
                                                        <td>
                                                            ไม่มี
                                                        </td>
                                                        <td>
                                                            <a href="https://www.google.com/maps?q=@Get.laitude_out,@Get.longitude_out" target="_blank">Show location on map</a>
                                                        </td>
                                                        <td>@Get.status  </td>
                                                        <td>
                                                            <a class="btn btn-success btn-xs pass" id="@Get.Id" onclick="Pass('@Get.Id')" value="Pass"><i class="fa fa-check-circle"></i> ผ่าน</a>
                                                            <a class="btn btn-danger btn-xs fail" id="@Get.Id" onclick="Fail('@Get.Id')" value="Fail"><i class="fa fa-ban"></i> ไม่ผ่าน</a>
                                                        </td>
                                                    </tr>
                                                    Rows++;
                                                }
                                                else if (Get.file_out != null)
                                                {
                                                    <tr>
                                                        <td class="text-align-center" width="50">@Rows.</td>
                                                        <td>@Get.date  </td>
                                                        <td>@Get.check_in  </td>
                                                        <td>
                                                            <button class="btn">@Html.ActionLink("Download","Download2", new { Name = Get.file_in })</button>
                                                        </td>
                                                        <td>
                                                            <a href="https://www.google.com/maps?q=@Get.laitude_in,@Get.longitude_in" target="_blank">Show location on map</a>
                                                        </td>
                                                        <td>@Get.check_out  </td>
                                                        <td>
                                                            <button class="btn">@Html.ActionLink("Download","Download3", new { Name = Get.file_out })</button>
                                                        </td>
                                                        <td>
                                                            <a href="https://www.google.com/maps?q=@Get.laitude_out,@Get.longitude_out" target="_blank">Show location on map</a>
                                                        </td>
                                                        <td>@Get.status  </td>
                                                        <td>
                                                            <a class="btn btn-success btn-xs pass" id="@Get.Id" onclick="Pass('@Get.Id')" value="Pass"><i class="fa fa-check-circle"></i> ผ่าน</a>
                                                            <a class="btn btn-danger btn-xs fail" id="@Get.Id" onclick="Fail('@Get.Id')" value="Fail"><i class="fa fa-ban"></i> ไม่ผ่าน</a>
                                                        </td>
                                                    </tr>
                                                    Rows++;
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>

@section Scripts{
    <script src="~/js/plugin/datatables/jquery.dataTables.min.js"></script>
    <script src="~/js/plugin/datatables/dataTables.colVis.min.js"></script>
    <script src="~/js/plugin/datatables/dataTables.tableTools.min.js"></script>
    <script src="~/js/plugin/datatables/dataTables.bootstrap.min.js"></script>
    <script src="~/js/plugin/datatable-responsive/datatables.responsive.min.js"></script>
    <script type="text/javascript">
        function Pass(id) {
            $.SmartMessageBox({
                title: "Information",
                content: "ต้องการให้งานที่ทำผ่านใช่ไหม?",
                buttons: "[ไม่][ใช่]"
            }, function (ButtonPressed) {
                if (ButtonPressed == "ใช่") {
                    $.ajax({
                        url: '/Devstudent/Pass',
                        type: 'POST',
                        data: { "id": id },
                        success: function (response) {
                            if (response.valid == true) {
                                $.smallBox({
                                    title: response.message,
                                    content: "<i class='fa fa-clock-o'></i> <i>2 seconds ago...</i>",
                                    color: "#296191",
                                    iconSmall: "fa fa-thumbs-up bounce animated",
                                    timeout: 1000
                                });
                                setTimeout(function () {
                                    window.location.href = "/Devstudent/ListStudentWorking";
                                }, 1000)
                            } else {
                                $.smallBox({
                                    title: response.message,
                                    content: "<i class='fa fa-clock-o'></i> <i>2 seconds ago...</i>",
                                    color: "#FB0404",
                                    iconSmall: "fa fa-thumbs-up bounce animated",
                                    timeout: 1000
                                });
                            }
                        }
                    });
                }
                if (ButtonPressed == "ไม่") {

                }
            })
        }

        function Fail(id) {
            $.SmartMessageBox({
                title: "Information",
                content: "ต้องการให้งานที่ทำไม่ผ่านใช่ไหม?",
                buttons: "[ไม่][ใช่]"
            }, function (ButtonPressed) {
                if (ButtonPressed == "ใช่") {
                    $.ajax({
                        url: '/Devstudent/Failed',
                        type: 'POST',
                        data: { "id": id },
                        success: function (response) {
                            if (response.valid == true) {
                                $.smallBox({
                                    title: response.message,
                                    content: "<i class='fa fa-clock-o'></i> <i>2 seconds ago...</i>",
                                    color: "#296191",
                                    iconSmall: "fa fa-thumbs-up bounce animated",
                                    timeout: 1000
                                });
                                setTimeout(function () {
                                    window.location.href = "/Devstudent/ListStudentWorking";
                                }, 1000)
                            } else {
                                $.smallBox({
                                    title: response.message,
                                    content: "<i class='fa fa-clock-o'></i> <i>2 seconds ago...</i>",
                                    color: "#FB0404",
                                    iconSmall: "fa fa-thumbs-up bounce animated",
                                    timeout: 1000
                                });
                            }
                        }
                    });
                }
                if (ButtonPressed == "ไม่") {

                }
            })
        }
    </script>
}
