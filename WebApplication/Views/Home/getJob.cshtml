@model IEnumerable<SeniorProject.Models.MASTER_FACULTY>

<table id="JsonTable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th class="text-align-left">ลำดับ</th>
            <th class="text-align-left">ชื่อคณะ</th>
        </tr>
    </thead>
    <tbody>
        @{
            int Rows = 1;
            foreach (var Get in Model.OrderBy(f => f.faculty_id))
            {
                <tr>
                    <td class="text-align-center" width="50">@Rows.</td>
                    <td>@Get.faculty_name  </td>
                    <td class="text-align-center">
                        <button class="btn btn-warning btn-xs edit" value="@Get.faculty_id"><i class="fa fa-pencil"></i> แก้ไข</button>
                        <button class="btn btn-danger  btn-xs  delete" value="@Get.faculty_id"><i class="fa fa-eraser"></i> ลบ</button>
                    </td>
                </tr>
                Rows++;
            }
        }
    </tbody>
</table>
